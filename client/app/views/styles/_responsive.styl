@media (max-width: 480px)
    // Landscape phones and down

    body
        text-rendering optimizeSpeed

    .type-column-cell
    .date-column-cell
    .size-column-cell
        display: none

    .table-headers
        display: none

    tr.folder-row .caption
        font-size: 14px

    #search-box
        width: 100%
        max-width: 185px

    .file-delete
    .file-download
    .file-edit
        display: none

    .btn-link
        white-space: normal
        text-align: left

    #crumbs
        li
            a
                padding: 5px


@media (max-width: 768px)
    // Landscape phone to portrait tablet

    body
        text-rendering optimizeSpeed

    .button-title-reponsive
        display: none

    .type-column-cell
        display: none
   
@media (max-width: 992px)
    // Portrait tablet to landscape and desktop

    .application
        .container
            margin: 0
            width: 100%
            max-width: 100%

