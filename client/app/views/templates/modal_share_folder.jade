#modal-dialog.modal.fade
  .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
          h4.modal-title #{t('modal shared folder link title')}
        .modal-body
          p
            | #{t('do you want to make this folder shareable')}
          p #{model.get('name')}
          p 
              button.button.btn-cozy.yes-share #{t('yes')}
              | &nbsp;
              button.button.btn-cozy.no-share #{t('no')}
 
          .share-infos
              p
                | #{t('modal shared folder link msg')}
                input(value=url).form-control
              p
                | #{t('modal share folder send msg')}
                input#modal-dialog-share-input.form-control(type="text")
        .modal-footer
          button.btn.btn-cozy#modal-dialog-share-send(type='button') #{t('modal share send btn')}
